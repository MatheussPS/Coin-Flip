<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coin_Flip.View.CoinView"
             Title ="CoinView">
    <VerticalStackLayout>
        <Image
            Source = "{Biding Imagem}"/>
        
        <Label
            Text = "{Biding Resultado}"/>
        
        <Picker x:Name="define_MoedaPicker"
            Title = "Selecione"
            SelectedItem = "{Biding Escolha}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Cara</x:String>
                    <x:String>Coroa</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button
             Text="Girar Moeda" 
             Command ="{Binding JogarCommand()}" />

    </VerticalStackLayout>
</ContentPage>